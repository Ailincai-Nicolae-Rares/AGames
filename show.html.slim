#container
  #nav
    #header
      a href="#" id="logo" = current_repository.display_name
    
    #sections.section
      == current_page.toc
    
    .extra.section#github
      a href=current_repository.github_url Source on Github
    - if current_config.issues
      .extra.section#github-issues
        a href=current_repository.github_issues_url Issues
    - if current_config.travis
      .extra.section#travis
        a href=current_repository.travis_url
          img src=current_repository.travis_image_url
    - current_config.twitter.each do |handle|
      .extra.section.twitter
        <iframe allowtransparency="true" frameborder="0" scrolling="no" style="width:162px; height:20px;" src="https://platform.twitter.com/widgets/follow_button.html?screen_name=#{handle.gsub('@', '')}&show_count=false"></iframe>

  #content
    - if current_config.github_ribbon
      a#github-ribbon href=current_repository.github_url
        img src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub"
    == current_page.html
